<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OMYLAB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script>
        function toggleChat() {
        const window = document.getElementById("chatbot-window");
        window.style.display = window.style.display === "none" || window.style.display === "" ? "flex" : "none";
        }
    </script>


    <style>
        body {
        margin: 0;
        }

        .sidebar {
        background-color: #1c1c1c;
        color: white;
        }

        .sidebar .nav-link {
        color: white;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link:focus {
        background-color: #2f2f2f;
        color: white;
        }

        .sidebar .collapse .nav-link {
        background-color: #6c757d;
        color: white;
        padding-left: 2rem;
        }

        .sidebar .collapse .nav-link:hover {
        background-color: #5c636a;
        }

        .topbar {
        background-color: #8B0000;
        color: white;
        }

        .topbar .btn {
        color: white;
        border: none;
        }

        .topbar .btn:hover {
        background-color: #a52a2a;
        }
    </style>
</head>
<body>

    <!-- Navbar superior -->
    <nav class="navbar topbar px-3">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <span class="navbar-text fw-bold">
                Bienvenido, @User.Identity.Name (@User.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")?.Value)
            </span>
            <div>
                <a href="#" class="nav-link text-danger" data-bs-toggle="modal" data-bs-target="#modalCerrarSesion">
                    Cerrar sesión
                </a>
            </div>
        </div>
    </nav>

    <!-- Layout principal -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar izquierdo -->
            <nav class="col-md-2 d-md-block sidebar min-vh-100 border-end">
                <div class="pt-3 nav flex-column">

                    @* Atención al Paciente: Admin, Supervisor, Recepcionista *@
                    @if (User.IsInRole("Administrador") || User.IsInRole("Supervisor") || User.IsInRole("Recepcionista"))
                    {
                        <a class="nav-link" data-bs-toggle="collapse" href="#atencionPaciente" role="button" aria-expanded="false">
                            Atención al Paciente
                        </a>
                        <div class="collapse" id="atencionPaciente">
                            <a class="nav-link" href="@Url.Action("Index", "Paciente")">Gestionar Pacientes</a>
                            <a class="nav-link" href="@Url.Action("Index", "Cita")">Gestionar Citas</a>
                        </div>
                    }

                    
                        <a class="nav-link" data-bs-toggle="collapse" href="#gestionClinica" role="button" aria-expanded="false">
                            Gestión Clínica
                        </a>
                        <div class="collapse" id="gestionClinica">
                            @* Gestión Clínica: Admin, Supervisor, Biólogo y Recepcionista *@
                        @if (User.IsInRole("Administrador") || User.IsInRole("Supervisor") || User.IsInRole("Biólogo") || User.IsInRole("Recepcionista"))
                            {
                                <a class="nav-link" href="@Url.Action("Index", "AnalisisPaciente")">Gestionar Análisis de Pacientes</a>
                            }
                            @* Gestión Clínica: Admin, Supervisor, Biólogo *@
                            @if (User.IsInRole("Administrador") || User.IsInRole("Supervisor") || User.IsInRole("Biólogo"))
                            {
                                <a class="nav-link" href="@Url.Action("Index", "Resultado")">Gestionar Resultados</a>
                            }
                            @* Gestión Clínica: Admin, Supervisor, Biólogo *@
                            @if (User.IsInRole("Administrador") || User.IsInRole("Supervisor"))
                            {
                                <a class="nav-link" href="@Url.Action("Index", "Analisis")">Gestionar Análisis del Laboratorio</a>
                                <a class="nav-link" href="@Url.Action("Index", "Componente")">Gestionar Componentes</a>
                             }
                        </div>
                    

                    @* Inventario: Admin, Supervisor *@
                    @if (User.IsInRole("Administrador") || User.IsInRole("Supervisor"))
                    {
                        <a class="nav-link" data-bs-toggle="collapse" href="#inventario" role="button" aria-expanded="false">
                            Inventario
                        </a>
                        <div class="collapse" id="inventario">
                            <a class="nav-link" href="@Url.Action("Index", "Reactivo")">Gestionar Reactivos</a>
                            <a class="nav-link" href="@Url.Action("Index", "Insumo")">Gestionar Insumos</a>
                        </div>
                    }

                    @* Gestión de Personal: Solo Admin *@
                    @if (User.IsInRole("Administrador"))
                    {
                        <a class="nav-link" href="@Url.Action("Index", "Empleado")">Gestión de Personal</a>
                    }

                    @* IA y Machine Learning: Solo Admin *@
                    @if (User.IsInRole("Administrador"))
                    {
                        <a class="nav-link" href="@Url.Action("Index", "PrediccionesReactivo")">IA y Machine Learning</a>
                    }

                    @* Auditoría y Reportes: Solo Admin *@
                    @if (User.IsInRole("Administrador"))
                    {
                        <a class="nav-link" data-bs-toggle="collapse" href="#auditoria" role="button" aria-expanded="false">
                            Auditoría y Reportes
                        </a>
                        <div class="collapse" id="auditoria">
                            <a class="nav-link" href="@Url.Action("Index", "HistorialAuditoria")">Historial de Auditoría</a>
                            <a class="nav-link" href="@Url.Action("Index", "Reporte")">Reportes</a>
                        </div>
                    }

                </div>
            </nav>

            <!-- Contenido principal -->
            <main class="col-md-10 ms-sm-auto px-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>


    <!-- Modal de confirmación -->
    <div class="modal fade" id="modalCerrarSesion" tabindex="-1" aria-labelledby="modalCerrarSesionLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title" id="modalCerrarSesionLabel">Confirmación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Está seguro que desea cerrar sesión?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <a href="/Seguridad/CerrarSesion" class="btn btn-danger">Cerrar sesión</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>




