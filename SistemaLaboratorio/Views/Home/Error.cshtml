@model SistemaLaboratorio.Controllers.ErrorViewModel
@{
    ViewBag.Title = "Error";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Error - OMYLAB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .error-container {
            max-width: 700px;
            width: 100%;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 40px;
            text-align: center;
        }

        .error-icon {
            font-size: 60px;
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-icon mb-3">
            <i class="bi bi-exclamation-octagon-fill"></i>
        </div>
        <h2 class="mb-3" style="color: #8B0000;">¡Algo salió mal!</h2>
        <p class="text-muted mb-3">Lo sentimos, ha ocurrido un error inesperado.</p>

        @if (Model?.ErrorMessage != null)
        {
            <div class="alert alert-danger text-start">
                <strong>Mensaje de error:</strong> @Model.ErrorMessage <br />
                <strong>Request ID:</strong> @Model.RequestId
            </div>
            <pre class="text-start text-muted" style="font-size: 12px; background: #f1f1f1; padding: 15px; border-radius: 5px;">
                @Model.StackTrace
                </pre>
        }

        <a href="~/" class="btn btn-primary mt-3">
            <i class="bi bi-house-door-fill"></i> Volver al Inicio
        </a>

        <div class="mt-4">
            <small class="text-muted">© @DateTime.Now.Year Laboratorio Clínico OMYLAB</small>
        </div>
    </div>

    <!-- Bootstrap Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
</body>
</html>
