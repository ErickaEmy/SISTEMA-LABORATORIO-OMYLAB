@model SistemaLaboratorio.Models.Paciente

@{
    ViewData["Title"] = "Registrar Paciente";
}

<h1 class="mb-4">Registrar Paciente</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Registrar" method="post" class="row g-3">
            @* Mensaje de validación general *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nombre -->
            <div class="col-md-6">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Apellidos -->
            <div class="col-md-6">
                <label asp-for="Apellidos" class="form-label"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <!-- DNI -->
            <div class="col-md-4">
                <label asp-for="Dni" class="form-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>

            <!-- Fecha de Nacimiento -->
            <div class="col-md-4">
                <label asp-for="FechaNacimiento" class="form-label"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <!-- Celular -->
            <div class="col-md-4">
                <label asp-for="Celular" class="form-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>

            <!-- Correo -->
            <div class="col-md-6">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" type="email" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <!-- Dirección -->
            <div class="col-md-6">
                <label asp-for="Direccion" class="form-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <!-- Sexo -->
            <div class="col-md-6">
                <label asp-for="Sexo" class="form-label"></label>
                <select asp-for="Sexo" asp-items="ViewBag.Sexos" class="form-select">
                    <option value="">-- Seleccione --</option>
                </select>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="col-md-6">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select">
                    <option value="">-- Seleccione --</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="col-12 d-flex justify-content-between">

                <button type="submit" class="btn btn-primary">Registrar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
