@model IEnumerable<SistemaLaboratorio.Models.Insumo>

@{
    ViewData["Title"] = "Lista de Insumos";
}

<h1 class="mb-4">Insumos</h1>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <a class="btn btn-primary" asp-action="Registrar">Registrar</a>
    <input type="text" id="buscarInput" class="form-control w-25" placeholder="Buscar insumo...">
</div>

<table class="table table-bordered table-striped" id="insumoTabla">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.CantidadDisponible)</th>
            <th>@Html.DisplayNameFor(model => model.UnidadMedida)</th>
            <th>@Html.DisplayNameFor(model => model.FechaVencimiento)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.CantidadDisponible)</td>
                <td>@Html.DisplayFor(modelItem => item.UnidadMedida)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaVencimiento)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>
                    <a asp-action="Actualizar" asp-route-id="@item.InsumoId" class="btn btn-sm btn-warning">Actualizar</a>
                    <a asp-action="Detalle" asp-route-id="@item.InsumoId" class="btn btn-sm btn-info">Detalle</a>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalEliminar" data-id="@item.InsumoId" data-nombre="@item.Nombre">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal de confirmación de eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalEliminarLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro que desea eliminar el insumo <strong id="insumoNombre"></strong>?
            </div>
            <div class="modal-footer">
                <form id="formEliminar" asp-action="Eliminar" method="post">
                    <input type="hidden" name="id" id="insumoIdEliminar" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filtro de búsqueda en tiempo real
        document.getElementById('buscarInput').addEventListener('keyup', function () {
            var valorBusqueda = this.value.toLowerCase();
            var filas = document.querySelectorAll('#insumoTabla tbody tr');

            filas.forEach(function (fila) {
                var textoFila = fila.textContent.toLowerCase();
                fila.style.display = textoFila.includes(valorBusqueda) ? '' : 'none';
            });
        });

        // Configurar datos en el modal al abrirse
        var modalEliminar = document.getElementById('modalEliminar');
        modalEliminar.addEventListener('show.bs.modal', function (event) {
            var boton = event.relatedTarget;
            var insumoId = boton.getAttribute('data-id');
            var insumoNombre = boton.getAttribute('data-nombre');

            document.getElementById('insumoIdEliminar').value = insumoId;
            document.getElementById('insumoNombre').textContent = insumoNombre;
        });
    </script>
}
