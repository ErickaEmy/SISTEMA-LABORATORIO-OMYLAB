@model SistemaLaboratorio.Models.Componente
@{
    ViewData["Title"] = "Registrar Componente";
}

<h1>Registrar Componente</h1>

<form asp-action="Registrar" method="post">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Categoria" class="control-label"></label>
        <input asp-for="Categoria" class="form-control" />
        <span asp-validation-for="Categoria" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="cantidadValores">Cantidad de Valores de Referencia</label>
        <input type="number" name="cantidadValores" class="form-control" min="1" required />
        <span class="text-danger">@ViewBag.CantidadError</span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Continuar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
