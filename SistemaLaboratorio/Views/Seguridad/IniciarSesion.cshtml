@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Iniciar Sesión - OMYLAB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        body {
            background: linear-gradient(135deg, #8B0000 0%, #6f0000 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .login-card {
            max-width: 420px;
            width: 100%;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            background: #fff;
            animation: slideIn 0.4s ease-out;
        }

        .btn-omylab {
            background: linear-gradient(135deg, #8B0000 0%, #6f0000 100%);
            color: #fff;
            padding: 12px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-omylab:hover {
                background: linear-gradient(135deg, #6f0000 0%, #5a0000 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(139, 0, 0, 0.4);
                color: #fff;
            }

        .logo {
            max-width: 120px;
            margin-bottom: 20px;
            animation: fadeIn 0.6s ease-in;
        }

        .form-control:focus {
            border-color: #8B0000;
            box-shadow: 0 0 0 0.2rem rgba(139, 0, 0, 0.25);
        }

        /* Estilos del Modal OTP */
        .modal-content {
            border-radius: 16px;
            border: none;
        }

        .modal-header {
            background: linear-gradient(135deg, #8B0000 0%, #6f0000 100%);
            color: white;
            border-radius: 16px 16px 0 0;
            padding: 20px 25px;
        }

        .modal-body {
            padding: 30px 25px;
        }

        .icon-shield {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #8B0000 0%, #a52a2a 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            box-shadow: 0 4px 15px rgba(139, 0, 0, 0.3);
        }

            .icon-shield i {
                font-size: 35px;
                color: white;
            }

        .otp-input {
            text-align: center;
            font-size: 24px;
            font-weight: 600;
            letter-spacing: 8px;
            padding: 15px;
        }

        .info-box {
            background: #f8f9fa;
            border-left: 4px solid #8B0000;
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

            .info-box i {
                color: #8B0000;
                margin-right: 8px;
            }

        .expiry-text {
            color: #6c757d;
            font-size: 13px;
            margin-top: 15px;
            text-align: center;
        }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
            border-width: 0.2em;
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <img src="~/imagenes/logo.jpg" alt="Laboratorio OMYLAB" class="logo" />
        <h4 class="mb-2" style="color: #2c3e50; font-weight: 700;">Laboratorio Clínico OMYLAB</h4>
        <p class="text-muted mb-4">Inicie sesión para continuar</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form id="loginForm">
            @Html.AntiForgeryToken()
            <div class="form-floating mb-3 text-start">
                <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Usuario" required>
                <label for="usuario"><i class="bi bi-person-fill"></i> Usuario</label>
            </div>
            <div class="form-floating mb-3 text-start">
                <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Contraseña" required>
                <label for="contrasena"><i class="bi bi-lock-fill"></i> Contraseña</label>
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-omylab btn-lg" id="btnLogin">
                    <span id="btnText"><i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión</span>
                    <span id="btnSpinner" class="d-none">
                        <span class="spinner-border spinner-border-sm me-2"></span>Verificando...
                    </span>
                </button>
            </div>
        </form>

        <hr class="my-4">
        <small class="text-muted">© @DateTime.Now.Year Laboratorio Clínico OMYLAB</small>
    </div>

    <!-- Modal OTP -->
    <div class="modal fade" id="otpModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-shield-lock me-2"></i>Verificación de Seguridad
                    </h5>
                </div>
                <div class="modal-body">
                    <div class="icon-shield">
                        <i class="bi bi-shield-check"></i>
                    </div>

                    <p class="text-center text-muted mb-3">
                        Ingrese el código de 6 dígitos enviado a su correo electrónico
                    </p>

                    <div id="otpError" class="alert alert-danger d-none" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <span id="otpErrorMessage"></span>
                    </div>

                    <div class="info-box">
                        <i class="bi bi-info-circle-fill"></i>
                        <small>El código expira en <strong>5 minutos</strong></small>
                    </div>

                    <form id="otpForm">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <input type="text"
                                   class="form-control otp-input"
                                   id="codigo"
                                   name="codigo"
                                   placeholder="000000"
                                   maxlength="6"
                                   pattern="\d{6}"
                                   required
                                   autofocus
                                   autocomplete="off">
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-omylab btn-lg" id="btnValidar">
                                <span id="btnValidarText">
                                    <i class="bi bi-check-circle me-2"></i>Verificar Código
                                </span>
                                <span id="btnValidarSpinner" class="d-none">
                                    <span class="spinner-border spinner-border-sm me-2"></span>Verificando...
                                </span>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="cancelarOTP()">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const otpModal = new bootstrap.Modal(document.getElementById('otpModal'));

        // Manejar el login
        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const btnLogin = document.getElementById('btnLogin');
            const btnText = document.getElementById('btnText');
            const btnSpinner = document.getElementById('btnSpinner');

            // Mostrar spinner
            btnLogin.disabled = true;
            btnText.classList.add('d-none');
            btnSpinner.classList.remove('d-none');

            const formData = new FormData(this);

            try {
                const response = await fetch('@Url.Action("IniciarSesion", "Seguridad")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    // Ocultar spinner
                    btnLogin.disabled = false;
                    btnText.classList.remove('d-none');
                    btnSpinner.classList.add('d-none');

                    // Mostrar modal OTP
                    otpModal.show();

                    // Enfocar el input del código
                    setTimeout(() => {
                        document.getElementById('codigo').focus();
                    }, 500);
                } else {
                    // Mostrar error
                    btnLogin.disabled = false;
                    btnText.classList.remove('d-none');
                    btnSpinner.classList.add('d-none');

                    alert(result.message || 'Error al iniciar sesión');
                }
            } catch (error) {
                btnLogin.disabled = false;
                btnText.classList.remove('d-none');
                btnSpinner.classList.add('d-none');

                alert('Error de conexión. Intente nuevamente.');
            }
        });

        // Manejar la validación OTP
        document.getElementById('otpForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const btnValidar = document.getElementById('btnValidar');
            const btnValidarText = document.getElementById('btnValidarText');
            const btnValidarSpinner = document.getElementById('btnValidarSpinner');
            const otpError = document.getElementById('otpError');

            // Ocultar error anterior
            otpError.classList.add('d-none');

            // Mostrar spinner
            btnValidar.disabled = true;
            btnValidarText.classList.add('d-none');
            btnValidarSpinner.classList.remove('d-none');

            const formData = new FormData(this);

            try {
                const response = await fetch('@Url.Action("ValidarOtp", "Seguridad")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    // Redirigir al home
                    window.location.href = result.redirectUrl;
                } else {
                    // Mostrar error
                    btnValidar.disabled = false;
                    btnValidarText.classList.remove('d-none');
                    btnValidarSpinner.classList.add('d-none');

                    document.getElementById('otpErrorMessage').textContent = result.message;
                    otpError.classList.remove('d-none');

                    // Limpiar input
                    document.getElementById('codigo').value = '';
                    document.getElementById('codigo').focus();
                }
            } catch (error) {
                btnValidar.disabled = false;
                btnValidarText.classList.remove('d-none');
                btnValidarSpinner.classList.add('d-none');

                document.getElementById('otpErrorMessage').textContent = 'Error de conexión. Intente nuevamente.';
                otpError.classList.remove('d-none');
            }
        });

        // Auto-formatear el input para solo números
        document.getElementById('codigo').addEventListener('input', function(e) {
            this.value = this.value.replace(/\D/g, '');
        });

        // Cancelar OTP
        function cancelarOTP() {
            if (confirm('¿Está seguro de cancelar la verificación?')) {
                otpModal.hide();
                document.getElementById('loginForm').reset();
                document.getElementById('otpForm').reset();
                document.getElementById('otpError').classList.add('d-none');
            }
        }
    </script>
</body>
</html>