@model IEnumerable<SistemaLaboratorio.Models.Cita>
@if (TempData["Ok"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}
@{
    ViewData["Title"] = "Lista de Citas";
}

<h1 class="mb-4">Citas</h1>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <a class="btn btn-primary" asp-action="Registrar">Registrar</a>
    <input type="text" id="buscarInput" class="form-control w-25" placeholder="Buscar cita...">
</div>

<table class="table table-bordered table-striped" id="citaTabla">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Paciente.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Paciente.Apellidos)</th>
            <th>@Html.DisplayNameFor(model => model.Paciente.Dni)</th>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>@Html.DisplayNameFor(model => model.Hora)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Sede)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Paciente.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Paciente.Apellidos)</td>
                <td>@Html.DisplayFor(modelItem => item.Paciente.Dni)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => item.Hora)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Sede)</td>
                <td>
                    <a asp-action="Actualizar" asp-route-id="@item.CitaId" class="btn btn-sm btn-warning">Actualizar</a>
                    <a asp-action="Detalle" asp-route-id="@item.CitaId" class="btn btn-sm btn-info">Detalle</a>
                    <a asp-action="Eliminar" asp-route-id="@item.CitaId" class="btn btn-sm btn-danger">Eliminar</a>
                    <a asp-action="EnviarNotificacion" asp-route-id="@item.CitaId" class="btn btn-sm btn-outline-dark">Enviar Notificacion</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.getElementById('buscarInput').addEventListener('keyup', function () {
            var valorBusqueda = this.value.toLowerCase();
            var filas = document.querySelectorAll('#citaTabla tbody tr');

            filas.forEach(function (fila) {
                var textoFila = fila.textContent.toLowerCase();
                fila.style.display = textoFila.includes(valorBusqueda) ? '' : 'none';
            });
        });
    </script>
}
